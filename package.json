{
  "name": "crm",
  "version": "1.1.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "SET NODE_ENV=DEV & electron .",
    "dist": "electron-builder build -w ",
    "publish": " electron-builder build -w -p onTagOrDraft",
    "make-cert": "electron-builder create-self-signed-cert -p lazyProgrammer "
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^18.3.7",
    "electron-builder": "^20.34.0"
  },
  "dependencies": {
    "bootstrap": "^4.3.1",
    "electron-log": "^3.0.7",
    "electron-updater": "^4.0.0",
    "jquery": "^3.4.1",
    "nedb": "^1.8.0",
    "popper.js": "^1.15.0",
    "randomatic": "^3.1.1",
    "shortid": "^2.2.14"
  },
  "build": {
    "appId": "com.CRM.app",
    "productName": "CRM",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "nsis": {
      "oneClick": "false"
    },
    "win": {
      "certificateFile": "private/lazyProgrammer.pfx",
      "target": "nsis",
      "publisherName": "lazyProgrammer",
      "verifyUpdateCodeSignature": "false",
      "publish": [
        {
          "provider": "github"
        }
      ]
    }
  }
}
